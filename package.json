{
    "name": "vscode-browser-sync",
    "displayName": "VSCode Browser Sync",
    "description": "Integrate browser sync with VSCode to provide liveload",
    "version": "0.0.2",
    "publisher": "jasonlhy",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.browserSyncAtPanel"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.browserSyncAtPanel",
                "title": "Side Panel: browser sync"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "browser-sync": "^2.18.8",
        "portfinder" : "^1.0.13"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Jasonlhy/VSCode-Browser-Sync"
    }
}